<Window
    x:Class="VetClinic.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VetClinic"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid Background="#3f51b5">
            <StackPanel Margin="5" Orientation="Horizontal">
                <Image Source="../Resources/Image/Logo-256x256.png" />
                <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    FontFamily="Fira Code"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Доктор Неболит" />
            </StackPanel>
            <Button
                HorizontalAlignment="Right"
                Click="BtnBack_OnClick"
                Content="Назад" />
        </Grid>
        <Frame
            Name="MainFrame"
            Grid.Row="1"
            ContentRendered="MainFrame_OnContentRendered"
            NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
