<Page
    x:Class="VetClinic.Views.Pages.RegistrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VetClinic.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="RegistrationPage"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Width="300">
        <TextBox
            Name="TbLogin"
            md:HintAssist.Hint="Логин"
            md:HintAssist.IsFloating="True" />
        <PasswordBox
            Name="PbPassword"
            md:HintAssist.Hint="Пароль"
            md:HintAssist.IsFloating="True" />
        <PasswordBox
            Name="PbConfirmPassword"
            md:HintAssist.Hint="Подтверждение пароля"
            md:HintAssist.IsFloating="True" />
        <Button
            Margin="0,5"
            Click="ButtonBase_OnClick"
            Content="Регистрация" />
    </StackPanel>
</Page>
