<Page
    x:Class="VetClinic.Views.Pages.AuthorizationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VetClinic.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="AuthorizationPage"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    d:DesignHeight="200"
    d:DesignWidth="300"
    Loaded="AuthorizationPage_OnLoaded"
    mc:Ignorable="d">

    <StackPanel Width="300">
        <TextBox
            Name="TbLogin"
            md:HintAssist.Hint="Логин"
            md:HintAssist.IsFloating="True" />
        <PasswordBox
            Name="PbPassword"
            md:HintAssist.Hint="Пароль"
            md:HintAssist.IsFloating="True" />
        <CheckBox
            Name="IsRemember"
            Margin="10"
            Content="Запомнить" />
        <Button
            Margin="0,5"
            Click="BtnAuth_OnClick"
            Content="Войти" />
        <Button
            Margin="0,5"
            Click="BtnReg_OnClick"
            Content="Зарегистрироваться" />
    </StackPanel>
</Page>
